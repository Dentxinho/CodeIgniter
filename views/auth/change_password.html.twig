{% extends 'form_edit.html.twig' %}

{% block fields %}

	{{ form_input(user_id) }}
	<div class="control-group">
		{{ form_label('Old Password:', 'old', {'class': 'control-label'}) }}
		<div class="controls">
			{{ form_input(old_password) }}
		</div>
	</div>

	<div class="control-group">
		{{ form_label('New Password:', 'new', {'class': 'control-label'}) }}
		<div class="controls">
			{{ form_input(new_password) }}
			<span class="help-inline">At least {{ min_password_length }} characters long</span>
		</div>
	</div>

	<div class="control-group">
		{{ form_label('Confirm New Password:', 'new_confirm', {'class': 'control-label'}) }}
		<div class="controls">
			{{ form_input(new_password_confirm) }}
		</div>
	</div>

{% endblock fields %}

{% block buttons %}
	<div class="form-actions">
		{{ form_submit('submit', 'Change', 'class="btn btn-primary"') }}
	</div>
{% endblock buttons %}